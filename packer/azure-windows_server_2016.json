{
 "variables": {
    "azure_ad_tenant_id": "{{env `az_tenant_id`}}",
    "azure_subscription_id": "{{env `az_subscription_id`}}",
    "app_id": "{{env `az_client_id`}}",
    "client_secret": "{{env `az_client_secret`}}",
    "resource_group": "Testing",
    "storage_account": "mylab0packer"
  },
  "builders": [
    {
      "type": "azure-arm",
      "subscription_id": "{{user `azure_subscription_id`}}",
      "tenant_id": "{{user `azure_ad_tenant_id`}}",
      "object_id": "{{user `object_id`}}",
      "client_id": "{{user `app_id`}}",
      "client_secret": "{{user `client_secret`}}",

      "cloud_environment_name": "AzurePublicCloud",
      "location": "eastus",
      "vm_size": "Standard_D1",

      "managed_image_resource_group_name": "Testing",
      "managed_image_name": "juju4.harden-windows-win2016-{{isotime \"2006-01-02\"}}",

      "os_type": "Windows",
      "image_publisher": "MicrosoftWindowsServer",
      "image_offer": "WindowsServer",
      "image_sku": "2016-Datacenter",
      "image_version": "latest",

      "communicator": "winrm",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_timeout": "3m",
      "winrm_username": "packer"
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "inline": [
        "cmd /c \"whoami\""
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "dir c:\\"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "winrm quickconfig -q"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "winrm set winrm/config/service/auth @{Basic=\"true\"}"
      ]
    },
    {
      "type":  "ansible",
      "playbook_file": "./playbook-azure.yml",
      "extra_arguments": [
        "-v",
        "--connection", "packer",
        "--extra-vars", "ansible_shell_type=powershell ansible_shell_executable=None"
      ]
    }
  ]
}
